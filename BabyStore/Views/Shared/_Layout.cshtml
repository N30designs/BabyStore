<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta description="@ViewBag.MetaDescription  Esta es la descripción genérica de la página, se puede añadir información previa
          con el ViewBag.Metadescription" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BabyStore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Comprar por categoria", "Index", "Categories")</li>
                    <li>@Html.ActionLink("Ver todos nuestros productos", "Index", "Products")</li>
                </ul>
                <!--COMIENZA LA BARRA DE BÚSQUEDA-->
                @using (Html.BeginForm("Index", "Products", FormMethod.Get, new
                {
                    @class = "navbar-form navbar-left"
                }))
                {
                    <div class="form-group">
                        @Html.TextBox("Search", null, new { @class = "form-control", @placeholder = "Búsqueda de productos"})
                    </div>
                    <button type="submit" class="btn btn-default">Enviar</button>
                }
                
                <!--FINALIZA LA BARRA DE BÚSQUEDA-->
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Aplicación BabyStore, práctica del libro <a href="https://www.apress.com/gp/book/9781484221365">ASP.NET MVC with Entity Framework and CSS</a>  programadas por Adrián Arabit Ferre </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
